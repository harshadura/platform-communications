<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.motechproject</groupId>
	<artifactId>motech-platform</artifactId>
	<version>0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Motech Platform</name>

	<distributionManagement>
		<site>
			<id>www.motechproject.org</id>
			<url>file:////var/www/site</url>
		</site>
	</distributionManagement>

	<repositories>
		<repository>
			<id>motech-repo</id>
			<name>Motech Maven Repository</name>
			<url>http://nexus.motechproject.org/content/repositories/public</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>motech-repo</id>
			<name>Motech Maven Repository</name>
			<url>http://nexus.motechproject.org/content/repositories/public</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.2</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<version>1.8.5</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<modules>
		<module>motech-platform-common</module>
		<module>motech-platform-server</module>
		<module>motech-platform-scheduler</module>
        <module>motech-platform-ivr</module>
		<module>motech-platform-server-api</module>
		<module>motech-appointment-reminder</module>
		<module>motech-appointment-reminder-common</module>
    	<module>motech-platform-outbox</module>
    	<module>motech-platform-outbox-common</module>
        <module>tama</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<wtpversion>2.0</wtpversion>
					<downloadSources>true</downloadSources>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.mycila.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<version>1.9.0</version>
				<configuration>
					<header>header.txt</header>
					<strictCheck>true</strictCheck>
					<excludes>
						<exclude>**/jquery-autocomplete/**</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>2.7.2</version>
				<!-- <executions> <execution> <id>integration-test</id> <goals> <goal>integration-test</goal> 
					</goals> </execution> <execution> <id>verify</id> <goals> <goal>verify</goal> 
					</goals> </execution> </executions> -->
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>2.2</version>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<instrumentation>
						<excludes>
							<exclude>org/motechproject/event/*.class</exclude>
							<exclude>org/motechproject/dao/*.class</exclude>
                            <exclude>org/motechproject/context/Context.class</exclude>
                            <exclude>org/motechproject/appointmentreminder/model/*.class</exclude>
                            <exclude>org/motechproject/appointmentreminder/dao/couchdb/PatientDAOImpl.class</exclude>
                            <exclude>org/motechproject/server/appointmentreminder/eventtype/*.class</exclude>
                            <exclude>org/motechproject/**/model/*.class</exclude>
                            <exclude>org/motechproject/**/dao/couchdb/*.class</exclude>
                            <exclude>org/motechproject/**/Activator.class</exclude>
                            <exclude>org/motechproject/**/Activator$1.class</exclude>
                            <exclude>org/motechproject/server/service/ivr/CallInitiationException.class</exclude>
                            <exclude>org/motechproject/metrics/impl/LoggingAgentBackendImpl.class</exclude>
                            <exclude>org/motechproject/metrics/impl/StatsdAgentBackendImpl.class</exclude>

                            <exclude>org/motechproject/outbox/dao/*.class</exclude>
                            <exclude>org/motechproject/outbox/dao/couchdb/*.class</exclude>
							<exclude>org/motechproject/outbox/model/*.class</exclude>
                            <exclude>org/motechproject/server/tama/**/*.class</exclude>

						</excludes>
					</instrumentation>
					<check>
						<!-- Per-class thresholds -->
						<packageLineRate>35</packageLineRate>
						<packageBranchRate>30</packageBranchRate>

						<!-- Project-wide thresholds -->
						<totalLineRate>55</totalLineRate>
						<totalBranchRate>61</totalBranchRate>
					</check>
				</configuration>
				<executions>
					<execution>
						<phase>verify</phase>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-plugin-plugin</artifactId>
				<version>2.7</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
				<version>2.7.2</version>
				<configuration>
					<xrefLocation>${project.reporting.outputDirectory}/../xref-test</xrefLocation>
					<aggregate>true</aggregate>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jxr-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<aggregate>true</aggregate>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<aggregate>true</aggregate>
				</configuration>
				<reportSets>
					<reportSet>
						<id>aggregate</id>
						<reports>
							<report>aggregate</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.4</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<xrefLocation>${project.reporting.outputDirectory}/../xref</xrefLocation>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-project-info-reports-plugin</artifactId>
				<version>2.3.1</version>
				<reportSets>
					<reportSet>
						<reports>
							<report>index</report>
							<report>dependencies</report>
							<report>mailing-list</report>
							<report>cim</report>
							<report>issue-tracking</report>
							<report>license</report>
							<report>scm</report>
							<report>summary</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>taglist-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>

	<!-- License -->
	<licenses>
		<license>
			<name>MOTECH PLATFORM OPENSOURCE LICENSE AGREEMENT</name>
			<url>license.txt</url>
		</license>
	</licenses>

	<issueManagement>
		<system>Jira</system>
		<url>http://pmo.applab.org/</url>
	</issueManagement>

	<ciManagement>
		<system>hudson</system>
		<url>http://ci.motechproject.org/</url>
	</ciManagement>

	<mailingLists>
		<mailingList>
			<name>MOTECH Dev</name>
			<subscribe>motech-dev+subscribe@googlegroups.com</subscribe>
			<unsubscribe>motech-dev+unsubscribe@googlegroups.com</unsubscribe>
			<post>motech-dev@googlegroups.com</post>
			<archive>http://groups.google.com/group/motech-dev</archive>
		</mailingList>
	</mailingLists>

	<scm>
		<connection>scm:git:http://github.com/motech/MOTECH.git</connection>
		<developerConnection>scm:git:git@github.com:motech/MOTECH.git</developerConnection>
		<url>http://github.com/motech/MOTECH</url>
	</scm>

    <profiles>
        <profile>
            <id>ci</id>
            <activation>
                <file>
                    <exists>/var/lib/hudson/ci-server</exists>
                </file>
            </activation>
            <distributionManagement>
                <repository>
                    <id>motech.nexus</id>
                    <name>Motech Releases Repository</name>
                    <url>http://nexus.motechproject.org/content/repositories/releases</url>
                </repository>
                <snapshotRepository>
                    <id>motech.nexus</id>
                    <name>Motech Snapshots Repository</name>
                    <url>http://nexus.motechproject.org/content/repositories/snapshots</url>
                </snapshotRepository>
            </distributionManagement>
        </profile>
    </profiles>

</project>
