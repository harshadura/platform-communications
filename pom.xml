<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.motechproject</groupId>
    <artifactId>motech</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>MOTECH</name>

    <distributionManagement>
        <site>
            <id>www.motechproject.org</id>
            <url>file:////var/www/site</url>
        </site>
    </distributionManagement>

    <repositories>
        <repository>
            <id>motech-repo</id>
            <name>Motech Maven Repository</name>
            <url>http://nexus.motechproject.org/content/repositories/public</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>motech-repo</id>
            <name>Motech Maven Repository</name>
            <url>http://nexus.motechproject.org/content/repositories/public</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>1.8.5</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <modules>
        <module>motech-platform-common</module>
        <module>motech-platform-server</module>
        <module>motech-platform-scheduler</module>
        <module>motech-platform-ivr</module>
        <module>motech-platform-server-api</module>
        <module>motech-outbox</module>
        <module>motech-outbox-api</module>
        <module>motech-appointments</module>
        <module>motech-appointments-api</module>
        <module>motech-platform-decisiontree</module>
        <module>motech-platform-decisiontree-common</module>
        <module>motech-pillreminder</module>
        <module>motech-pillreminder-api</module>
        <module>motech-cmslite-api</module>
        <module>motech-scheduletracking-api</module>
        <module>motech-message-campaign</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-eclipse-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <wtpversion>2.0</wtpversion>
                    <downloadSources>true</downloadSources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <version>1.9.0</version>
                <configuration>
                    <header>header.txt</header>
                    <strictCheck>true</strictCheck>
                    <excludes>
                        <exclude>**/jquery-autocomplete/**</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>2.2</version>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <instrumentation>

                        <excludes>
                            <exclude>org/motechproject/server/service/ivr/CallInitiationException.class</exclude>
                            <exclude>org/motechproject/metrics/impl/LoggingAgentBackendImpl.class</exclude>
                            <exclude>org/motechproject/metrics/impl/StatsdAgentBackendImpl.class</exclude>

                            <!-- All models, contexts, daos, event keys and activators get a free test limit pass -->
                            <exclude>org/motechproject/**/annotations/*.class</exclude>
                            <exclude>org/motechproject/**/model/*.class</exclude>
                            <exclude>org/motechproject/**/dao/*.class</exclude>
                            <exclude>org/motechproject/**/dao/**/*.class</exclude>
                            <exclude>org/motechproject/**/context/*.class</exclude>
                            <exclude>org/motechproject/context/*.class</exclude>
                            <exclude>org/motechproject/**/Activator.class</exclude>
                            <exclude>org/motechproject/**/Activator$1.class</exclude>
                            <exclude>org/motechproject/**/EventKeys.class</exclude>

                            <exclude>org/motechproject/gateway/*.class</exclude>
                            <exclude>org/motechproject/server/osgi/*.class</exclude>
                            <exclude>org/motechproject/server/ruleengine/*.class</exclude>
                            <exclude>org/motechproject/server/service/ivr/*.class</exclude>
                        </excludes>
                    </instrumentation>
                    <check>
                        <!-- Per-class thresholds -->
                        <packageLineRate>0</packageLineRate>
                        <packageBranchRate>0</packageBranchRate>

                        <!-- Project-wide thresholds -->
                        <totalLineRate>0</totalLineRate>
                        <totalBranchRate>0</totalBranchRate>
                        <regexes>
                            <regex>
                                <pattern>org.motechproject.outbox.api.model.*</pattern>
                                <branchRate>0</branchRate>
                                <lineRate>0</lineRate>
                            </regex>
                        </regexes>
                    </check>
                </configuration>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                            <goal>clean</goal>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-plugin-plugin</artifactId>
                <version>2.7</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
                <version>2.9</version>
                <configuration>
                    <xrefLocation>${project.reporting.outputDirectory}/../xref-test</xrefLocation>
                    <aggregate>true</aggregate>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jxr-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <aggregate>true</aggregate>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <aggregate>true</aggregate>
                </configuration>
                <reportSets>
                    <reportSet>
                        <id>aggregate</id>
                        <reports>
                            <report>aggregate</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>2.5</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <xrefLocation>${project.reporting.outputDirectory}/../xref</xrefLocation>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <version>2.3.1</version>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>index</report>
                            <report>dependencies</report>
                            <report>mailing-list</report>
                            <report>cim</report>
                            <report>issue-tracking</report>
                            <report>license</report>
                            <report>scm</report>
                            <report>summary</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>taglist-maven-plugin</artifactId>
                <version>2.4</version>
            </plugin>
        </plugins>
    </reporting>

    <!-- License -->
    <licenses>
        <license>
            <name>MOTECH PLATFORM OPENSOURCE LICENSE AGREEMENT</name>
            <url>license.txt</url>
        </license>
    </licenses>

    <issueManagement>
        <system>Jira</system>
        <url>http://pmo.applab.org/</url>
    </issueManagement>

    <ciManagement>
        <system>hudson</system>
        <url>http://ci.motechproject.org/</url>
    </ciManagement>

    <mailingLists>
        <mailingList>
            <name>MOTECH Dev</name>
            <subscribe>motech-dev+subscribe@googlegroups.com</subscribe>
            <unsubscribe>motech-dev+unsubscribe@googlegroups.com</unsubscribe>
            <post>motech-dev@googlegroups.com</post>
            <archive>http://groups.google.com/group/motech-dev</archive>
        </mailingList>
    </mailingLists>

    <scm>
        <connection>scm:git:http://github.com/motech/MOTECH.git</connection>
        <developerConnection>scm:git:git@github.com:motech/MOTECH.git</developerConnection>
        <url>http://github.com/motech/MOTECH</url>
    </scm>

    <profiles>
        <profile>
            <id>ci</id>
            <activation>
                <file>
                    <exists>/var/lib/hudson/ci-server</exists>
                </file>
            </activation>
            <distributionManagement>
                <repository>
                    <id>motech.nexus</id>
                    <name>Motech Releases Repository</name>
                    <url>http://nexus.motechproject.org/content/repositories/releases</url>
                </repository>
                <snapshotRepository>
                    <id>motech.nexus</id>
                    <name>Motech Snapshots Repository</name>
                    <url>http://nexus.motechproject.org/content/repositories/snapshots</url>
                </snapshotRepository>
            </distributionManagement>
        </profile>
        <profile>
            <id>tw-ci</id>
            <properties>
                <db.server>127.0.0.1</db.server>
                <db.port>5984</db.port>
            </properties>
            <distributionManagement>
                <repository>
                    <id>motech.nexus</id>
                    <name>Motech Releases Repository</name>
                    <url>http://nexus.motechproject.org/content/repositories/releases</url>
                </repository>
                <snapshotRepository>
                    <id>motech.nexus</id>
                    <name>Motech Snapshots Repository</name>
                    <url>http://nexus.motechproject.org/content/repositories/snapshots</url>
                </snapshotRepository>
            </distributionManagement>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-release-plugin</artifactId>
                            <version>2.1</version>
                            <configuration>
                                <preparationGoals>clean verify -P tw-ci</preparationGoals>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <version>2.9</version>
                        <configuration>
                            <encoding>UTF-8</encoding>
                            <excludes>
                                <exclude>**/IVRServiceImplIT.java</exclude>
                                <exclude>**/SchedulerGatewayIT.java</exclude>
                                <exclude>**/PillReminderDaoIT.java</exclude>
                                <exclude>**/GeneratePillReminderIT.java</exclude>
                            </excludes>
                        </configuration>
                        <executions>
                            <execution>
                                <id>integration-test</id>
                                <goals>
                                    <goal>integration-test</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>verify</id>
                                <goals>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2</version>
                        <executions>
                            <execution>
                                <id>drop DB => rules</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>curl</executable>
                                    <arguments>
                                        <argument>-s</argument>
                                        <argument>-S</argument>
                                        <argument>-X</argument>
                                        <argument>"DELETE"</argument>
                                        <argument>"http://${db.server}:${db.port}/rules"</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>drop DB => trees</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>curl</executable>
                                    <arguments>
                                        <argument>-s</argument>
                                        <argument>-S</argument>
                                        <argument>-X</argument>
                                        <argument>"DELETE"</argument>
                                        <argument>"http://${db.server}:${db.port}/trees"</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>drop DB => test-tama</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>curl</executable>
                                    <arguments>
                                        <argument>-s</argument>
                                        <argument>-S</argument>
                                        <argument>-X</argument>
                                        <argument>"DELETE"</argument>
                                        <argument>"http://${db.server}:${db.port}/test-tama"</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>drop DB => test-appointments</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>curl</executable>
                                    <arguments>
                                        <argument>-s</argument>
                                        <argument>-S</argument>
                                        <argument>-X</argument>
                                        <argument>"DELETE"</argument>
                                        <argument>"http://${db.server}:${db.port}/test-appointments"</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>drop DB => test-outbox</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>curl</executable>
                                    <arguments>
                                        <argument>-s</argument>
                                        <argument>-S</argument>
                                        <argument>-X</argument>
                                        <argument>"DELETE"</argument>
                                        <argument>"http://${db.server}:${db.port}/test-outbox"</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>drop DB => motech-pillreminder</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>curl</executable>
                                    <arguments>
                                        <argument>-s</argument>
                                        <argument>-S</argument>
                                        <argument>-X</argument>
                                        <argument>"DELETE"</argument>
                                        <argument>"http://${db.server}:${db.port}/motech-pillreminder"</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>drop DB => motech-outbox</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>curl</executable>
                                    <arguments>
                                        <argument>-s</argument>
                                        <argument>-S</argument>
                                        <argument>-X</argument>
                                        <argument>"DELETE"</argument>
                                        <argument>"http://${db.server}:${db.port}/motech-outbox"</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>drop DB => motech-cmslite</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>curl</executable>
                                    <arguments>
                                        <argument>-s</argument>
                                        <argument>-S</argument>
                                        <argument>-X</argument>
                                        <argument>"DELETE"</argument>
                                        <argument>"http://${db.server}:${db.port}/motech-cmslite"</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
