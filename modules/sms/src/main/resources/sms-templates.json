[
    {
        "name":"Clickatell",
		"requires": [
			"username",
			"password",
			"clickatell_api_id"
		],
        "outgoing":{
            "request":{
                "urlPath":"http://api.clickatell.com/http/sendmsg",
                "multiRecipient":"true",
                "recipientsSeparator":",",
                "queryParameters":{
                    "user":"[username]",
                    "password":"[password]",
                    "api_id":"[clickatell_api_id]",
                    "to":"[recipients]",
                    "text":"[message]"
                }
            },
            "response":{
                "success":".*(ID: ).*"
            }
        },
        "incoming":{
            "messageKey": "$message",
            "senderKey": "$sender",
            "timestampKey": "$time"
        }
    },
